<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        
        <record id="rental_order_primary_form_view" model="ir.ui.view">
            <field name="name">sale.order.form.jasatec2</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_renting.rental_order_primary_form_view"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook/page[@name='order_lines']/field/tree/field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('rent_ok','!=',False), '|', ('company_id','=',False), ('company_id','=',parent.company_id)]</attribute>
                </xpath>
                <xpath expr="//field[@name='signature']" position="attributes">
                    <attribute name="widget">signature</attribute>
                </xpath>
            </data>
            </field>
        </record>
        
        <record id="view_quotation_tree" model="ir.ui.view">
            <field name="name">sale.order.tree.jasatec2</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='invoice_status']" position="attributes">
                    <attribute name="decoration-success">invoice_status == 'sale' or invoice_status == 'invoiced'</attribute>
                    <attribute name="decoration-info">invoice_status == 'no' or invoice_status == 'to invoice'</attribute>
                    <attribute name="widget">badge</attribute>
                    <attribute name="optional">show</attribute>
                </xpath>
            </data>
            </field>
        </record>
    </data>
</odoo>
