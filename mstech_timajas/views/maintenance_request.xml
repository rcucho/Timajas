<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_maintenance_request_form_timajas" model="ir.ui.view">
            <field name="name">maintenance.request.form.timajas</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='maintenance_type']" position="after">
                    <field name="mant_project" attrs="{'invisible':[('stage_id','==',1)]}" />
                </xpath>
            </data>
            </field>
        </record>
        <record id="view_maintenance_equipment_form_timajas" model="ir.ui.view">
            <field name="name">maintenance.equipment.form.timajas</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="maintenance_open_count"/>
                    <field name="eqip_product" attrs="{'invisible':[('name','==', False)]}"/>
                    <field name="stock_eq_cont" attrs="{'invisible':[('name','==', False)]}"/>
                    <field name="stock_eq" attrs="{'invisible':[('name','==', False)]}"/> 
                </xpath>
                <xpath expr="//button[@name='667']" position="after">
                    <button name="action_picking_move_tree" class="oe_stat_button" icon="fa-arrows-v" type="object" groups="base.group_no_one"
                        attrs="{'invisible': ['|', '&amp;', ('show_operations', '=', True), '|', ('is_locked', '=', True), ('state', '=', 'done'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)]}"
                        context="{'picking_type_code': eqip_task.task_picking.picking_type_code, 'default_picking_id': eqip_task.task_picking.id, 'form_view_ref':'stock.view_move_form', 'address_in_id': eqip_task.task_picking.partner_id, 'default_picking_type_id': eqip_task.task_picking.picking_type_id, 'default_location_id': eqip_task.task_picking.location_id, 'default_location_dest_id': eqip_task.task_picking.location_dest_id}">
                            <field name="stock_eq_cont" widget="statinfo" string="Mov Inventario"/>
                    </button>
                </xpath>
            </data>
            </field>
        </record> 
    </data>
</odoo>
